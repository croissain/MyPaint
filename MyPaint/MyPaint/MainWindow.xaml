                            </Fluent:Button>-->
                        </WrapPanel>
                    </ScrollViewer>
                    <ComboBox Name="Stoke"
                              SelectedIndex="0"
                              Width="80"
                              IsEditable="True"
                              IsReadOnly="True"
                              Text="Stroke"
                              ToolBar.OverflowMode="Never">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text=""
                                           Foreground="White" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox>
                    <Fluent:SplitButton x:Name="viewButton"
                                        Header="Size"
                                        SizeDefinition="Large">
                        <Fluent:SplitButton.LargeIcon>
                            <materialDesign:PackIcon Kind="NotificationClearAll"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"
                                                     Height="30"
                                                     Width="30" />
                        </Fluent:SplitButton.LargeIcon>
                        <Fluent:Gallery GroupBy="Tag"
                                        ItemHeight="32"
                                        ItemWidth="60"
                                        Orientation="Vertical"
                                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                        Selectable="False">
                            <Fluent:GalleryItem>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <Rectangle Fill="White"
                                               Height="7"
                                               Width="30"
                                               Margin="0,5" />
                                    <TextBlock Margin="8,0,0,0"><Run Text="7" /></TextBlock>
                                </StackPanel>
                            </Fluent:GalleryItem>
                            <Fluent:GalleryItem>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <Rectangle Fill="White"
                                               Height="6"
                                               Width="30"
                                               Margin="0,5" />
                                    <TextBlock Margin="8,0,0,0"><Run Text="6" /></TextBlock>
                                </StackPanel>
                            </Fluent:GalleryItem>
                            <Fluent:GalleryItem>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <Rectangle Fill="White"
                                               Height="5"
                                               Width="30"
                                               Margin="0,5" />
                                    <TextBlock Margin="8,0,0,0"><Run Text="5" /></TextBlock>
                                </StackPanel>
                            </Fluent:GalleryItem>
                            <Fluent:GalleryItem>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <Rectangle Fill="White"
                                               Height="4"
                                               Width="30"
                                               Margin="0,5" />
                                    <TextBlock Margin="8,0,0,0"><Run Text="4" /></TextBlock>
                                </StackPanel>
                            </Fluent:GalleryItem>
                            <Fluent:GalleryItem>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <Rectangle Fill="White"
                                               Height="3"
                                               Width="30"
                                               Margin="0,5" />
                                    <TextBlock Margin="8,0,0,0"><Run Text="3" /></TextBlock>
                                </StackPanel>
                            </Fluent:GalleryItem>
                        </Fluent:Gallery>
                    </Fluent:SplitButton>
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox Header="Colors">
                    <Grid Margin="4,4"
                          Height="58"
                          x:Name="colors">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <Button x:Name="Black"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Background="Black">
                        </Button>
                        
                        <Button x:Name="White"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Grid.Column="0"
                                Grid.Row="1"
                                Background="White">
                        </Button>

                        <Button x:Name="Red"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="1"
                                Grid.Row="0"
                                Background="#FF968A">
                        </Button>

                        <Button x:Name="Orage"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="2"
                                Grid.Row="0"
                                Background="#FFC8A2">
                        </Button>

                        <Button x:Name="Yellow"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="3"
                                Grid.Row="0"
                                Background="#FFFFB5">
                        </Button>

                        <Button x:Name="Pink"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="4"
                                Grid.Row="0"
                                Background="#FEE1E2">
                        </Button>

                        <Button x:Name="Purple"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="5"
                                Grid.Row="0"
                                Background="#CBAACB">
                        </Button>

                        <Button x:Name="Blue"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="1"
                                Grid.Row="1"
                                Background="#FF89BBE4">
                        </Button>

                        <Button x:Name="Cyan"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="2"
                                Grid.Row="1"
                                Background="#FFAFE8DB">
                        </Button>

                        <Button x:Name="Green"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="3"
                                Grid.Row="1"
                                Background="#FFB2E8AF">
                        </Button>

                        <Button x:Name="Gray"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="4"
                                Grid.Row="1"
                                Background="#FFCFC0B9">
                        </Button>

                        <Button x:Name="Transparent"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Height="20"
                                Width="20"
                                Margin="2,0"
                                Grid.Column="5"
                                Grid.Row="1"
                                Background="#00B39DDB">
                        </Button>
                    </Grid>
                        <Fluent:Button x:Name="moreColorButton"
                                       Header="More color"
                                       SizeDefinition="Large">

                            <Fluent:Button.LargeIcon>
                                <materialDesign:PackIcon Kind="Palette"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         Height="30"
                                                         Width="30" />
                            </Fluent:Button.LargeIcon>
                        </Fluent:Button>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <Fluent:RibbonTabItem Header="View">

            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>
        <Canvas>
        </Canvas>
    </StackPanel>
</Fluent:RibbonWindow>
