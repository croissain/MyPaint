                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="ChartLineVariant" />
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                            <Fluent:Button x:Name="shapeCurve"
                                           SizeDefinition="Small">
                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="Gesture" />
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                            <Fluent:Button x:Name="shapeEllipse"
                                           SizeDefinition="Small">
                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="EllipseOutline" />
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                            <Fluent:Button x:Name="shapeRectangle"
                                           SizeDefinition="Small">
                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="RectangleOutline" />
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                            <Fluent:Button x:Name="shapeTriangle"
                                           SizeDefinition="Small">
                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="TriangleOutline" />
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                            <Fluent:Button x:Name="shapeDiamond"
                                           SizeDefinition="Small">
                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="RhombusOutline" />
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                            <Fluent:Button x:Name="shapePentagon"
                                           SizeDefinition="Small">
                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="PentagonOutline" />
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                            <Fluent:Button x:Name="shapeHexagon"
                                           SizeDefinition="Small">
                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="HexagonOutline" />
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                            <Fluent:Button x:Name="shapeStart"
                                           SizeDefinition="Small">
                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="StarOutline" />
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                            <Fluent:Button x:Name="shapeHeart"
                                           SizeDefinition="Small">
                                <Fluent:Button.LargeIcon>
                                    <materialDesign:PackIcon Kind="HeartOutline" />
                                </Fluent:Button.LargeIcon>
